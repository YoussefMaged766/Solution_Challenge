<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/slide_container_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_home"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/home_img"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/txt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/tahoma_regular"
                android:text="Start your plan \n            change your life"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_pick_plan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pick_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fe8312"
                android:fontFamily="@font/tahoma_regular"
                android:text="Pickup your plan"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_home"
                app:layout_constraintEnd_toEndOf="@id/txt8"
                app:layout_constraintStart_toStartOf="@id/txt8"
                app:layout_constraintTop_toBottomOf="@id/txt8" />

            <TextView
                android:id="@+id/txt_meals_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/tahoma_regular"
                android:text="Meals : "
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_home" />

            <TextView
                android:id="@+id/txt_seemore_meals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/georgia"
                android:text="see more"
                android:textColor="@color/intro_color"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/recycler_meals"
                app:layout_constraintEnd_toEndOf="@id/recycler_meals"
                app:layout_constraintTop_toBottomOf="@id/img_home"

                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:layout_constraintBottom_toBottomOf="@+id/txt_seemore_meals"
                app:layout_constraintStart_toEndOf="@id/txt_seemore_meals"
                app:layout_constraintTop_toTopOf="@id/txt_seemore_meals"
                app:tint="@color/black" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_add_meals_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:src="@drawable/ic_arrow_left_24"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/recycler_meals"
                app:layout_constraintEnd_toStartOf="@id/recycler_meals"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/recycler_meals"
                app:tint="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_meals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toStartOf="@id/btn_add_meals"
                app:layout_constraintStart_toEndOf="@id/btn_add_meals_left"
                app:layout_constraintTop_toBottomOf="@id/txt_meals_home"
                tools:listitem="@layout/nutration_item_list"

                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_add_meals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:src="@drawable/ic_arrow_right_24"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/recycler_meals"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/recycler_meals"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/txt_Exercises_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/tahoma_regular"
                android:text="Exercises : "
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_meals" />

            <TextView
                android:id="@+id/txt_seemore_exersise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/georgia"
                android:text="see more"
                android:textColor="@color/intro_color"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/recycler_Exercises"
                app:layout_constraintEnd_toEndOf="@id/recycler_meals"
                app:layout_constraintTop_toBottomOf="@id/recycler_meals"

                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:layout_constraintBottom_toBottomOf="@+id/txt_seemore_exersise"
                app:layout_constraintStart_toEndOf="@id/txt_seemore_exersise"
                app:layout_constraintTop_toTopOf="@id/txt_seemore_exersise"
                app:tint="@color/black" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_add_Exercises_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:src="@drawable/ic_arrow_left_24"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/recycler_Exercises"
                app:layout_constraintEnd_toStartOf="@id/recycler_Exercises"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/recycler_Exercises"
                app:tint="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_Exercises"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_add_meals"
                app:layout_constraintStart_toEndOf="@id/btn_add_Exercises_left"
                app:layout_constraintTop_toBottomOf="@id/txt_Exercises_home"
                tools:listitem="@layout/nutration_item_list" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_add_Exercises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:src="@drawable/ic_arrow_right_24"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/recycler_Exercises"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/recycler_Exercises"
                app:tint="@color/black" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>