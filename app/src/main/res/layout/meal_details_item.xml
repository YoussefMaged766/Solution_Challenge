<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_icon_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_details"
        app:layout_constraintBottom_toBottomOf="@id/txt_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_details"
        android:src="@drawable/ic_dot_24"
        app:tint="@color/black"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/txt_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_icon_details"
        app:layout_constraintBottom_toTopOf="@id/view_line_detail"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/tahoma_regular"
        android:text="sdfsdafsadf"
        />
    <View
        android:id="@+id/view_line_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt_details"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>